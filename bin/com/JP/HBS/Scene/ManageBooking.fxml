<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTreeTableView?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.JP.HBS.Controller.ManageBookingController">
	<children>
		<JFXTextField fx:id="searchTextField" focusColor="#8ac3f0" prefHeight="35.0" prefWidth="900.0" promptText="Search..." unFocusColor="#eeeeee" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
			<font>
				<Font name="Segoe UI" size="22.0" />
			</font>
		</JFXTextField>
		<JFXTreeTableView fx:id="tableView" prefHeight="450.0" showRoot="false" AnchorPane.topAnchor="100.0">
			<columns>
				<TreeTableColumn fx:id="idColumn" minWidth="-Infinity" prefWidth="237.5" text="ID" />
				<TreeTableColumn fx:id="roomColumn" minWidth="-Infinity" prefWidth="237.5" text="Room" />
				<TreeTableColumn fx:id="dateColumn" minWidth="-Infinity" prefWidth="237.5" text="Date" />
				<TreeTableColumn fx:id="nameColumn" minWidth="-Infinity" prefWidth="237.5" text="Name" />
			</columns>
		</JFXTreeTableView>
		<JFXButton onAction="#onUpdateButtonClick" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #48A5EA; -fx-background-radius: 30;" text="UPDATE" textFill="WHITE" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="500.0">
			<font>
				<Font name="Segoe UI Bold" size="16.0" />
			</font>
		</JFXButton>
		<JFXButton onAction="#onDeleteButtonClick" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #48A5EA; -fx-background-radius: 30;" text="DELETE" textFill="WHITE" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="275.0">
			<font>
				<Font name="Segoe UI Bold" size="16.0" />
			</font>
		</JFXButton>
		<JFXButton onAction="#onViewButtonClick" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #48A5EA; -fx-background-radius: 30;" text="VIEW" textFill="WHITE" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="50.0">
			<font>
				<Font name="Segoe UI Bold" size="16.0" />
			</font>
		</JFXButton>
	</children>
</AnchorPane>
